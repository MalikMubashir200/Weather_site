 <header class="bg-blue-600 shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row justify-between items-center sm:items-center h-16">
        <!-- Logo -->
        <a href="#" class="text-white text-2xl font-bold mb-2 sm:mb-0">
          Cloudy Weather
        </a>
  
        <!-- Search Form -->
        <form action="/" method="post" class="flex items-center space-x-2 w-full sm:w-auto">
